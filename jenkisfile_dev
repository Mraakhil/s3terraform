pipeline {
    agent any

    parameters {
        choice(name: 'SERVICE',choices: ['s3', 'ebs', 'efs'],description: 'Select the AWS service you want to create')
        choice(name: 'action', choices: ['apply', 'destroy'], description: 'Choose the action apply or destroy')
      
    
    }

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/Mraakhil/dockertheend.git', branch: 'dev'
            }
        }

        stage('Terraform Init') {
            steps {
                    dir('VOLUME') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Apply Based on Choice') {
            steps {
                script {
                    if (params.SERVICE == 's3') {
                        sh 'terraform ${action} -auto-approve -target=aws_s3_bucket.s3bucketmss'
                    } else if dir('VOLUME') {
                    sh 'terraform apply -auto-approve -target=aws_ebs_volume.volume_example'
                }
                    } else if (params.SERVICE == 'efs') {
                        sh 'terraform ${action} -auto-approve -target=aws_efs_file_system.my_efs'
                    }
                }
            }
        }
    }
}
